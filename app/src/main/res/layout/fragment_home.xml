<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeSwipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradation"
    tools:context=".fragment.HomeFragment">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeScrollbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="fill_vertical"
            android:padding="0dp">
            <ImageView
                android:id="@+id/homePatternImage"
                android:layout_width="fill_parent"
                android:layout_height="280dp"
                android:adjustViewBounds="true"
                android:maxWidth="100dp"
                android:maxHeight="100dp"
                android:scaleType="fitCenter"
                android:elevation="-10dp"
                android:alpha="1"
                android:backgroundTint="@color/white_bg"
                android:background="@drawable/pattern"
                tools:ignore="NotSibling" />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/homeKrplSerpisTitleRounded"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="70dp"
                android:layout_marginHorizontal="60dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="30dp"
                app:strokeWidth="0dp"
                app:strokeColor="@color/green"
                android:alpha="1">
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:background="@drawable/icon_serpis"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_rowSpan="2" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KRPL SERPIS"
                        android:alpha="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:shadowColor="@color/white"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:textAllCaps="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/krpl_serpis_title_kebun_kita"
                        android:alpha="1"
                        android:textSize="13sp"
                        android:textStyle="italic|bold"
                        android:textColor="@color/nyanza"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="10dp"
                        android:shadowColor="@color/white"
                        android:shadowDx="1.5"
                        android:shadowDy="1.3"
                        android:shadowRadius="1.6"
                        android:textAllCaps="true" />
                </GridLayout>
            </com.google.android.material.card.MaterialCardView>
            <RelativeLayout
                android:id="@+id/homeTanamanBackground"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@drawable/box_rounded_white_2"
                android:layout_marginHorizontal="0dp"
                android:layout_marginTop="120dp">
                <TextView
                    android:id="@+id/homeTesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanaman"
                    android:alpha="1"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:layout_marginTop="90dp"
                    android:layout_centerHorizontal="true" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginHorizontal="120dp"
                    android:background="@color/green"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="80dp"
                    android:layout_alignStart="@id/homeGridLayoutWidgetFrame"
                    android:layout_alignTop="@id/homeGridLayoutWidgetFrame"
                    android:layout_marginHorizontal="40dp"
                    android:background="@color/green"
                    android:alpha="0.3"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="250dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignTop="@id/homeGridLayoutWidgetFrame"
                    android:layout_marginHorizontal="40dp"
                    android:background="@color/green"
                    android:alpha="0.3"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="100dp"
                    android:layout_marginEnd="80dp"
                    android:layout_alignEnd="@id/homeGridLayoutWidgetFrame"
                    android:layout_alignTop="@id/homeGridLayoutWidgetFrame"
                    android:layout_marginHorizontal="40dp"
                    android:background="@color/green"
                    android:alpha="0.3"/>
                <GridLayout
                    android:id="@+id/homeGridLayoutWidgetFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:layout_centerHorizontal="true"
                    android:padding="10dp"
                    android:clipToPadding="false">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/homeMediaTanamWidget"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        android:clipToPadding="false"
                        android:layout_margin="10dp"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/white"
                        android:layout_column="0"
                        android:layout_row="0">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="0dp"
                            android:paddingStart="10dp"
                            android:text="Media Tanah"
                            android:textStyle="italic"
                            android:textSize="15sp"
                            android:elevation="20dp"
                            android:background="@drawable/box_square_green"
                            android:textColor="@color/white"
                            android:layout_marginTop="112dp"
                            android:layout_marginStart="3dp"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="117dp"
                            android:layout_marginStart="120dp"
                            android:elevation="20dp"
                            android:background="@drawable/double_right_96px"
                            android:contentDescription="TODO" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:background="@drawable/img_mediatanah_4"
                            android:contentDescription="TODO" />
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/homeGreenhouse1Widget"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        android:clipToPadding="false"
                        android:layout_margin="10dp"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/white"
                        android:layout_column="1"
                        android:layout_row="0">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="0dp"
                            android:paddingStart="10dp"
                            android:text="Greenhouse 1"
                            android:textStyle="italic"
                            android:textSize="15sp"
                            android:elevation="20dp"
                            android:background="@drawable/box_square_green"
                            android:textColor="@color/white"
                            android:layout_marginTop="112dp"
                            android:layout_marginStart="3dp"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="117dp"
                            android:layout_marginStart="120dp"
                            android:elevation="20dp"
                            android:background="@drawable/double_right_96px"
                            android:contentDescription="TODO" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:background="@drawable/img_greenhouse1_3"
                            android:contentDescription="TODO" />
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/homeGreenhouse2Widget"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="10dp"
                        android:clipToPadding="false"
                        android:layout_margin="10dp"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_column="0"
                        android:layout_columnSpan="3"
                        android:layout_row="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="0dp"
                            android:paddingStart="10dp"
                            android:text="Greenhouse 2"
                            android:textStyle="italic"
                            android:textSize="15sp"
                            android:elevation="20dp"
                            android:background="@drawable/box_square_green"
                            android:textColor="@color/white"
                            android:layout_marginTop="112dp"
                            android:layout_marginStart="3dp"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="117dp"
                            android:layout_marginStart="120dp"
                            android:elevation="20dp"
                            android:background="@drawable/double_right_96px"
                            android:contentDescription="TODO" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:background="@drawable/img_greenhouse2_4"
                            android:contentDescription="TODO" />
                    </com.google.android.material.card.MaterialCardView>
                </GridLayout>
            </RelativeLayout>
            </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
